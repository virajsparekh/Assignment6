<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/_head', { title: set.name }) %>
    <link rel="stylesheet" href="/css/setDetails.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <%- include('partials/_navbar', { activePage: 'sets' }) %>

    <main class="container my-5 set-details-animate">
        <!-- Header Section -->
        <div class="set-header">
            <h1><%= set.name %></h1>
            <div class="meta-badges">
                <span class="badge bg-primary">
                    <i class="bi bi-calendar"></i> <%= set.year %>
                </span>
                <a href="/lego/sets?theme=<%= set.theme %>" class="theme-badge">
                    <i class="bi bi-tags"></i> <%= set.theme %>
                </a>
                <span class="part-count">
                    <i class="bi bi-puzzle"></i> <%= set.num_parts %> parts
                </span>
            </div>
        </div>

        <div class="row g-4">
            <!-- Image Column -->
            <div class="col-lg-6">
                <div class="set-image-container">
                    <% if(set.img_url) { %>
                        <img src="<%= set.img_url %>" alt="<%= set.name %>">
                    <% } else { %>
                        <div class="img-placeholder">
                            <span>No Image Available</span>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Details Column -->
            <div class="col-lg-6">
                <div class="detail-card">
                    <h3><i class="bi bi-info-circle"></i> Set Details</h3>
                    
                    <table class="detail-table">
                        <tbody>
                            <tr>
                                <th>Set Number</th>
                                <td>
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-123"></i> <%= set.set_num %>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Theme</th>
                                <td>
                                    <a href="/lego/sets?theme=<%= set.theme %>" class="theme-badge">
                                        <i class="bi bi-collection"></i> <%= set.theme %>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th>Release Year</th>
                                <td>
                                    <i class="bi bi-calendar3"></i> <%= set.year %>
                                </td>
                            </tr>
                            <tr>
                                <th>Parts Count</th>
                                <td class="part-count">
                                    <i class="bi bi-puzzle"></i> <%= set.num_parts %>
                                </td>
                            </tr>
                            <% if(set.notes) { %>
                            <tr>
                                <th>Notes</th>
                                <td><%= set.notes %></td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>

                    <div class="action-buttons">
                        <form action="/lego/deleteSet/<%= set.set_num %>" method="POST">
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Permanently delete this set?')">
                                <i class="bi bi-trash3"></i> Delete
                            </button>
                        </form>
                        <a href="/lego/sets" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>